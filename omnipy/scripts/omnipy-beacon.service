[Unit]
Description=Omnipy UDP broadcast receiver
After=network.target

[Service]
ExecStart=/usr/bin/python3 -u $HOME/omnipy/omnipy/tools/omnipy_beacon.py
WorkingDirectory=$HOME/omnipy/omnipy/tools/
StandardOutput=inherit
StandardError=inherit
Restart=always
User=pi

[Install]
WantedBy=multi-user.target
